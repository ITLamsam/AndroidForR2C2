<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>
                <solid
                    android:color="@color/backgroundColor">
                </solid>

                <corners android:radius="5dp" />
                <padding
                    android:bottom="15dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="10dp" />
                <stroke
                    android:width="1dp"
                    android:color="@color/white"/>
            </shape>
        </item>
        <item >
            <bitmap android:gravity="bottom|right"
                android:src="@drawable/drown_down_arrow" />
        </item>

        <item >
            <bitmap android:gravity="start|center_vertical"
                android:src="@drawable/map" />
        </item>
    </layer-list></item>
</selector>