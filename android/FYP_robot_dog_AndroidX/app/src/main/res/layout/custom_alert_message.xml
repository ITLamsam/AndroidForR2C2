<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="12dp"
    app:cardCornerRadius="16dp"
    android:layout_margin="16dp"
    android:backgroundTint="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WRONG ACCOUNT OR PASSWORD !!!"
            android:textSize="23dp"
            android:id="@+id/alerTtitle"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/alertContent"
            android:text="Please enter account  and password again. "
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textSize="16dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/ok"
                android:text="Ok"
                android:textColor="@color/white"
                android:background="@drawable/background_color_button"
                android:textSize="21dp"
                android:textAllCaps="false"
                />

<!--            useless button-->
            <Button
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/Yes"
                android:layout_marginLeft="40dp"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textSize="21dp"
                android:fontFamily="monospace"
                android:textColor="@color/white"
                android:background="@drawable/red_button_background_red"
                />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>